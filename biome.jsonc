{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true,
		"defaultBranch": "master"
	},
	"files": {
		"ignoreUnknown": true,
		"includes": [
			"**",
			"!.cache",
			"!.claude",
			"!logs",
			"!.next",
			"!.git",
			"!node_modules",
			"!playwright-report",
			"!sample-components",
			"!screenshots",
			"!test-results",
			"!.vercel",
			"!.vscode"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"complexity": {
				"noExcessiveCognitiveComplexity": "on"
			}
		},
		"domains": {
			"next": "all",
			"project": "recommended",
			"test": "all"
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	},

	"css": {
		"formatter": {
			"enabled": true
		}
	},
	"assist": {
		"enabled": true,
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	},
	"overrides": [
		{
			"includes": ["tests/**", "**/*.test.ts", "**/test-*.ts"],
			"linter": {
				"rules": {
					"suspicious": {
						"noExplicitAny": "off"
					},
					"style": {
						"noNonNullAssertion": "off"
					}
				}
			}
		}
	]
}
